h3 Blog Dashboard

form(name='blogForm', novalidate)
  .form-group
    label(for='title') Title
    input.form-control#title(name='title', type='text', ng-model='blog.title')

  .form-group
    label(for='blurb') Blurb
    input.form-control#blurb(name='blurb', type='text', ng-model='blog.blurb')
      
  .form-group
    label(for='author') Author
    input.form-control#author(name='author', type='text', ng-model='blog.author')
  
  .form-group
    label(for='content') Content
    textarea.form-control#content(name='content', ng-model='blog.content')
      
  .form-group
    button.btn.btn-primary(ng-click='addBlog(blog)') Add
    
table.table.table-striped
  thead
    tr
      th Edit
      th Save
      th Delete
      th Title
      th Blurb
      th Author
      th Content
      th Created At
  tbody
    tr(ng-repeat='blog in afBlogs')
      td: button.btn.btn-info.btn-xs(ng-click='editBlog(blog)') Edit
      td: button.btn.btn-info.btn-xs(ng-click='updateBlog(blog)') Save
      td: button.btn.btn-danger.btn-xs(ng-click='deleteBlog(blog)') Delete
      td {{blog.title}}
      td {{blog.blurb}}
      td {{blog.author}}
      td {{blog.content}}
      td {{blog.createdAt | date:'MM/dd/yyyy @ h:mma'}}
