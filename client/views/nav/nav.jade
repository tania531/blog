nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand 
        img(src='http://www.roanokewellnesscenter.com/wp-content/uploads/2014/08/Life-Philosophy.jpg') 
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li: a(ui-sref='read'): i.fa.fa.fa-info &nbsp; Read
        li: a(ui-sref='blogs'): i.fa.fa.fa-check-circle-o &nbsp; Blogs
        li: button.btn.btn-lg.btn-success(ng-click='logout()'): i.fa.fa-sign-out &nbsp; {{activeUser.password.email}}

      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='home'): i.fa.fa.fa-home &nbsp; Home
        li: a(ui-sref='read'): i.fa.fa.fa-info &nbsp; Read
        li: a(ui-sref='register'): i.fa.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
      
